{% extends "layout/main.jinja" %}

{% block main %}
<!-- dashboard inner -->
<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Report Training Model</h2>
                </div>
            </div>
        </div>
        <div class="row column4 graph">
            <!-- Naive Bayes -->
            <div class="col-md-6">
                <div class="white_shd full margin_bottom_30">

                    <div class="dash_head">
                        <h3><span>Naive Bayes</span></h3>
                    </div>
                    <div class="p-4">
                        <p>Laporan hasil training data bantuan kelurahan solok sipin menggunakan metode naive bayes
                        </p>
                    </div>

                    <div class="full progress_bar_inner">
                        <div class="row">
                            <div class="col-md-12">
                                <!-- Skill Bars -->
                                <div class="widget_progress_bar pt-0">
                                    <p class="progress_no">73%</p>
                                    <p class="progress_head">Akurasi Model</p>
                                    <!-- Skill Bars -->
                                    <div>
                                        <span class="skill" style="width:73%;">Akurasi model
                                            <span class="info_valume">73%</span></span>
                                        <div class="progress skill-bar ">
                                            <div class="progress-bar progress-bar-animated progress-bar-striped"
                                                role="progressbar" aria-valuenow="73" aria-valuemin="0" aria-valuemax="100"
                                                style="width: 73%;"></div>
                                        </div>
                                    </div>
                                    <div>
                                        <span class="skill" style="width:73%;">Mean Cross-Validation Score
                                            <span class="info_valume">73%</span></span>
                                        <div class="progress skill-bar">
                                            <div class="progress-bar progress-bar-animated progress-bar-striped"
                                                role="progressbar" aria-valuenow="73" aria-valuemin="0" aria-valuemax="100"
                                                style="width: 73%;"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="read_more">
                                    <div class="center"><a class="main_bt read_bt" href="#">Read More</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Decision Tree -->
            <div class="col-md-6">
                <div class="white_shd full margin_bottom_30">

                    <div class="dash_head">
                        <h3><span>Decision Tree</span></h3>
                    </div>
                    <div class="p-4">
                        <p>Laporan hasil training data bantuan kelurahan solok sipin menggunakan metode decision tree
                        </p>
                    </div>

                    <div class="full progress_bar_inner">
                        <div class="row">
                            <div class="col-md-12">
                                <!-- Skill Bars -->
                                <div class="widget_progress_bar pt-0">
                                    <p class="progress_no">90%</p>
                                    <p class="progress_head">Akurasi Model</p>
                                    <!-- Skill Bars -->
                                    <div>
                                        <span class="skill" style="width:90%;">Akurasi model
                                            <span class="info_valume">90%</span></span>
                                        <div class="progress skill-bar ">
                                            <div class="progress-bar progress-bar-animated progress-bar-striped"
                                                role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100"
                                                style="width: 90%;"></div>
                                        </div>
                                    </div>
                                    <div>
                                        <span class="skill" style="width:90%;">Mean Cross-Validation Score
                                            <span class="info_valume">90%</span></span>
                                        <div class="progress skill-bar">
                                            <div class="progress-bar progress-bar-animated progress-bar-striped"
                                                role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100"
                                                style="width: 90%;"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-center">
                                    <pre>{{data}}</pre>
                                </div>
                                <div class="read_more">
                                    <div class="center"><a class="main_bt read_bt" href="#">Read More</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- end dashboard inner -->
{% endblock main %}