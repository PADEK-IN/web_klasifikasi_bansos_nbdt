{% extends "layout/main.jinja" %}

{% block main %}
<!-- dashboard inner -->

<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Hasil Status Bantuan</h2>
                </div>
            </div>
        </div>
        <div class="text-center">
            {% if data.status == "pending" %}
                <h3 class="mt-4">Pending</h3>
                <p>Hi {{data.nama | capitalize}}, mohon bersabar ya. Data kamu sedang di proses, harap menunggu yaa....</p>
            {% elif data.status == "tidak layak" %}
                <h1 class="mt-4">Selamat</h1>
                <h3 class="mt-4">Bantuan {{ data.status }}</h3>
                <p class="p-0 m-0">Hi {{data.nama | capitalize}}, dengan berat hati kami mohon maaf karena data kamu tervalidasi sebagai bukan penerima manfaat.</p>
            {% else %}
                <h1 class="mt-4">Selamat</h1>
                <h3 class="mt-4">Bantuan {{ data.status }}</h3>
                <p class="p-0 m-0">Hi {{data.nama | capitalize}}, alhamdulillah kami ucapkan selamat, data kamu tervalidasi sebagai penerima manfaat.</p>
                <p class="p-0 m-0">Untuk penyaluran mohon ditunggu ya, semoga bermanfaat, terima kasih.</p>
            {% endif %}
        </div>
    </div>
</div>
<!-- end dashboard inner -->
{% endblock main %}