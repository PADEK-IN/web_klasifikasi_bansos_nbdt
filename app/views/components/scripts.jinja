            let table = new DataTable('#example');
            function sendData() {
                  $("table").removeClass("table-hover");
                  $("thead").removeClass("text-white");
                  $("thead").addClass("font-weight-bold");
                  $("#title").removeClass("d-none");
                  table.destroy();
                  const tableHTML = document.getElementById('data').outerHTML;
                  localStorage.setItem('tableData', tableHTML);
                  new DataTable('#example');
                  $("#title").addClass("d-none");
                  $("table").addClass("table-hover");
                  $("thead").addClass("text-white");
                  $("thead").removeClass("font-weight-bold");
                  window.location.href = '/preview';
            }
